---
// Importa la configuración

import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import Nav from "../components/Nav.astro";
---
<!-- hideSidebar y noAside ocultan para tener un hijo solo (slot) -->
<Layout title="welcome" hideSidebar noAside >
    
    <div class="h-full bg-[#0f0f0f] flex flex-col items-center justify-between">
        <span></span>
        <a href="/fundamentos/conceptos-basicos"
            class="select-none hover:scale-105 hover:transition-transform bg-blue-400 p-[15px] rounded-xl font-bold text-white text-[20px] shadow"
            >Get Started</a
        >
        <p class="text-white mb-[10px] uppercase">Proyecto creado con mucho ❤️️ por Marco Juarez</p>
    </div>
</Layout>

<style>
    .shadow {
        box-shadow: 5px 6px 55px -8px rgba(0, 0, 0, 0.75);
        -webkit-box-shadow: 5px 6px 55px -8px rgba(0, 0, 0, 0.75);
        -moz-box-shadow: 5px 6px 55px -8px rgba(0, 0, 0, 0.75);
    }
</style>
