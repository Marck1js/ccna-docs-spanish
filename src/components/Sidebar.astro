---
import { sidebarConfig } from "../config/sidebarConfig";
import Acordeon from "./ui/Acordeon.astro";
import TagA from "./ui/TagA.astro";
---

<div class="w-fit py-[20px] h-auto  pr-[10px] overflow-auto border-r-[1px] border-gray-100">
    {
        sidebarConfig.map((section) => (
            <Acordeon title={section.name}>
                {section.tags.map((tag, index) => (
                    <TagA title={tag} href={section.paths && section.paths[index]} />
                ))}
            </Acordeon>
        ))
    }
</div>
